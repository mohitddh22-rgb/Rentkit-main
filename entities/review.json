{
  "name": "Review",
  "type": "object",
  "properties": {
    "booking_id": {
      "type": "string",
      "description": "ID of the completed booking"
    },
    "equipment_id": {
      "type": "string",
      "description": "ID of the equipment reviewed"
    },
    "reviewer_id": {
      "type": "string",
      "description": "ID of the person leaving the review"
    },
    "reviewed_user_id": {
      "type": "string",
      "description": "ID of the user being reviewed (owner or renter)"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Star rating 1-5"
    },
    "comment": {
      "type": "string",
      "description": "Review comment"
    },
    "review_type": {
      "type": "string",
      "enum": [
        "equipment",
        "owner",
        "renter"
      ],
      "description": "Type of review"
    }
  },
  "required": [
    "booking_id",
    "reviewer_id",
    "rating",
    "review_type"
  ]
}
